# convertion methode 
def convert_to_Caesar(text):
    processed_string = ''
    for position in text:
        if(position == '.'):
            processed_string += 'X'
        elif(position.isalpha()):
            processed_string += position.upper()
    return processed_string


# encryption methode
def encrypt_Caesar(string, shift):
 #the methode encrypt the string
  cipher = ''
  for char in string: 
    if char == ' ':
      cipher = cipher + char
    else :
        cipher = cipher + chr((ord(char) + shift - 65) % 26 + 65)
  return cipher

# decryption methode
def decrypt_Caesar(string, shift):
  cipher = ''
  for char in string: 
    if char == ' ':
      cipher = cipher + char
    else :    
      cipher = cipher + chr((ord(char) - shift - 65) % 26 + 65)
  return cipher


####    main program    ####
import re

print("### Welcome to Ceaser Cipher ###\n")
print("Select the following option\n")
# select option Encryption or Decryption
option=int(input("1- to Encrypt\n2- to Decrypt\n"))
if option==1:
    while True:
        UserInput=input("Enter your text : ")
        if len(UserInput) == 0:
            print("Please enter a text !")
        elif re.search("[a-z]" and "[A-Z]",UserInput) is None:
            print("Make sure your text containt a letter !")
        else:
            break
    shift=int(input("Enter the shift key : "))
    convertion=convert_to_Caesar(UserInput)
    print("The encryption : ", encrypt_Caesar(convertion, shift))
elif option==2:
    text = input("Enter a cipher text : ")
    s = int(input("Enter a shift number : "))
    print("The decryption : ", decrypt_Caesar(text, s))
else:
    print("Please Enter valid option")
print("\n****Thank You****")
 
 
